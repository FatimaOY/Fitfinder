<Window x:Class="Fitfinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fitfinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,0,0">
        <Image Source="pack://application:,,,/images/fitfinder_logo_bicep.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="72" Width="76" Margin="227,72,0,0"/>
        <TextBlock Text="FitFinder" Foreground="#FF6700" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,84,0,0"
           FontSize="36" FontWeight="Bold"/>

        <!-- Title -->
        <TextBlock Text="Start your fitness journey now!" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,170,0,0" FontSize="24" FontWeight="Bold"/>

        <!-- Register Button -->
        <Button Content="Start now!" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,273,0,0" Width="148" Click="RegisterButton_Click"/>

        <!-- Login Button -->
        <Button Content="I'm already registered" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,324,0,0" Width="148" Click="LoginButton_Click"/>
        <Frame x:Name="MainFrame"/>
    </Grid>
</Window>
